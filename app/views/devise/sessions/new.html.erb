<div class="container opacity mt-2" style="width: 600px">
    <div class="card border-white p-5">
    <div class="text-center p-3">
      <h2>ðŸ¤¿ Log in</h2>
    </div>
      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
        data: {turbo: false}) do |f| %>
        <div class="form-inputs">
          <div class="row g-1">
              <%= f.input :email,
                          required: false,
                          autofocus: true,
                          input_html: { autocomplete: "email" },
                          placeholder: "email*",
                          label: false %>
              <%= f.input :password,
                          required: false,
                          input_html: { autocomplete: "current-password" },
                          placeholder: "password*",
                          label: false %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>

            </div>
        </div>

        <div class="form-actions">
          <div class="d-grid col-3 mx-auto my-4">
          <%= f.button :submit, "Log in", class: "btn btn-success" %>
          </div>
        </div>
      <% end %>
      <%= render "devise/shared/links" %>
    </div>
</div>
