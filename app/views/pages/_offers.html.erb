<div class="offers">
  <% @offers.each do |o| %>
    <div class="card-offers shadow-sm p-4">
      <p><i class="fa-solid fa-clock"></i> <%= o.duration %> <%= o.unit_duration %> | <i class="fa-solid fa-money-bills"></i> <%= o.currency %> <%= o.price %> | <%= o.level %></p>
      <h4><%= o.name %></h4>
      <div class="d-flex justify-content-between align-items-center">
        <div class="col-9">
        <p><%= truncate o.briefing, length:250 %></p>
        </div>
        <p><%= link_to offer_path(o), class:"btn btn-primary"  do %>
            View Offer <i class="fa-solid fa-arrow-right-long"></i>
        <% end %></p>
      </div>
      <div class="card-offers-bottom">
      </div>
    </div>
  <% end %>
</div>
