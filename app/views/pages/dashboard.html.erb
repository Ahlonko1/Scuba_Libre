<div class="banner-show-pro">
      <div class="text-center">
        <h2>Dashboard</h2>
        <h4>Welcome <%= current_user.first_name %>, ðŸ¤¿</h4>

            <% if current_user.pro? %>
              <div class="text-center my-3">
                <%= link_to "Add a new offer", new_offer_path, class: "btn btn-secondary" %>
                <%= link_to "Edit profile", edit_user_registration_path, class: "btn btn-secondary" %>
