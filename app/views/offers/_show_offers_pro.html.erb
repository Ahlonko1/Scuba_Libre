<div class="card-offers">
  <h2><%= offer.name %></h2>
  <p><%= offer.price %> <%= offer.currency %></p>
  <!-- Button trigger modal -->
  <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#exampleModal<%=offer.id%>">
  View offer
  </button>
</div>
<!-- Modal -->
<div class="modal fade" id="exampleModal<%=offer.id%>" tabindex="-1" aria-labelledby="exampleModal<%=offer.id%>Label" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModal<%=offer.id%>Label"><%= offer.name %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
      </div>
      <div class="modal-body">
        <%= offer.briefing %>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Save changes</button>
      </div>
    </div>
  </div>
</div>
