<div class="banner-show-booking d-flex justify-content-between position-relative">
  <div class="row align-items-center justify-content-between">
    <div class="banner-booking-info">
      <h1><%= @booking.offer.name %></h1>
      <h3><%=@booking.offer.user.first_name%> <%= @booking.user.last_name%></h3>
      <h5><i class="fa-solid fa-location-pin"></i> <%= @booking.location%></h3>
      <h4><span class="badge-pending bg-white mt-1"><i class="fa-solid fa-spinner color-$deepblue"></i> Status: <%=@booking.status%></span></h4>
    </div>
    <div class="wave">
      <%= image_tag 'wave-02.png', class: 'position-absolute bottom-0 end-0 w-50' %>
    </div>
    <div class="atcb" style="display:none;"></div>
  </div>
</div>

  <%# </div>
</div> %>

<div class="d-flex w-100 align-items-start">
  <div class="w-75 p-5">
    <div class="d-flex justify-content-between infos-bookings">
      <div class= "quarter-info">
        <div class="d-flex justify-content-around" style="width 100%">
          <div>
            <p>Category:</p>
            <h3><%= @booking.offer.category %></h3>
          </div>
          <div class="divider"></div>
        </div>
      </div>
      <div class= "quarter-info">
        <div class="d-flex justify-content-around" style="width 100%">
          <div>
            <p>Level:</p>
            <h3><%= @booking.offer.level %></h3>
          </div>
          <div class="divider"></div>
        </div>
      </div>
      <div class="quarter-info">
        <div class="d-flex justify-content-around " style="width 100%">
          <div>
            <p>Number of dives:</p>
            <h3><%= @booking.offer.dives %></h3>
            </div>
          <div class="divider"></div>
        </div>
      </div>
      <div class="quarter-info">
        <div class="d-flex justify-content-around " style="width 100%">
          <div>
            <p>Duration:</p>
            <h3><%= @booking.offer.duration %> <%= @booking.offer.unit_duration %></h3>
          </div>
        </div>
      </div>
    </div>
        <h5><u>Briefing:</u></h5>
        <p><%= @booking.offer.briefing %></p>
        <h5><u>Prerequisites:</u></h5>
        <p><%= @booking.offer.prerequisites %></p>
        <h5><u>Included:</u></h5>
        <p><%= @booking.offer.included %></p>
    </div>
  <div class="validate-banner w-25 p-5 white shadow p-3 mx-5 bg-white rounded" style="margin-top: -70px; position: sticky; top: 100px;">
    <div class="mt-3 justify-content-between">
      <h4>Contact:</h4>
      <h6>Teacher:</h6>
      <p><%= @booking.offer.user.email %></p>
      <h4>Booker:</h4>
      <p><%= @booking.user.email %></p>
    </div>
  </div>
</div>

<% if @booking.methods.include?(:messages) %>
  <div class="container mt-5">
    <h1>Messagerie:</h1>
    <div class="messages">
      <% @booking.messages.each do |message| %>
        <div id="message-<%= message.id %>">
          <small>
            <strong><%= message.user.first_name %></strong>
            <i><%= message.created_at.strftime("%a %b %e at %l:%M %p") %></i>
          </small>
          <p><%= message.content %></p>
        </div>
      <% end %>
      <%= simple_form_for [@booking, @message],
        html: {class: "d-flex"} do |f|
        %>
        <%= f.input :content,
                    label: false,
                    placeholder: "Coucou",
                    wrapper_html: {class: "flex-grow-1"}
                    %>
        <%= f.submit "Send", class: "btn btn-primary mb-3" %>
      <% end %>
    </div>
  </div>
<% end %>

