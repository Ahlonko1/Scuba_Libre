<div class="banner-show-pro d-flex">
  <%= cl_image_tag @pro.avatar.key, class: "avatar-profile" %>
  <div class="banner-pro-info">
    <h1><%= @pro.first_name %> <%= @pro.last_name[0].capitalize%>.</h1>
    <p><i class="fa-solid fa-location-dot"></i></i> <%= @pro.location %></p>
    <div class="d-flex align-items-center">
      <p><%= @pro.bio%></p>
      <p class="mx-5"><i style="font-size: 50px; color:orange;" class="fa-brands fa-instagram-square"></i></p>
    </div>
  </div>
  <div class="vague-showpro">
  </div>
</div>
  <div class="mt-3 ms-3">
    <%= link_to "Back", :back, class: "btn btn-secondary" %>
  </div>
<div class="container d-flex">
  <div class="filters">
    <p>Category</p>
    <p>Level</p>
    <p>Price</p>
    <p>Certification</p>
  </div>
  <div class="offers">
      <h2>Experiences</h2>
      <% @offers.each do |o| %>

          <div class="card-offers shadow-sm">
            <p><i class="fa-solid fa-clock"></i> <%= o.duration %> <%= o.unit_duration %> | <i class="fa-solid fa-money-bills"> </i><%= o.currency %> <%= o.price %></p>
            <h4><%= o.name %></h4>
            <div class="d-flex justify-content-between align-items-center">
              <div class="">
              <p><%= truncate o.briefing, length:150 %></p>
              </div>
              <p><%= link_to offer_path(o), class:"btn btn-primary"  do %>
                  View Offer <i class="fa-solid fa-arrow-right-long"></i>
              <% end %></p>
            </div>
            <div class="card-offers-bottom">
            </div>
          </div>
      <% end %>
  </div>
</div>
